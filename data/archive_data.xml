<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- تسلسل الباركود -->
    <record id="seq_archive_barcode" model="ir.sequence">
        <field name="name">تسلسل باركود الأرشيف</field>
        <field name="code">archive.folder.barcode</field>
        <field name="prefix">ARC-</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- مجلدات افتراضية -->
    <record id="default_physical_folder" model="archive.folder">
        <field name="name">الأرشيف الرئيسي</field>
        <field name="type">physical</field>
        <field name="description">المجلد الرئيسي للأرشيف الورقي</field>
    </record>

    <record id="default_digital_folder" model="archive.folder">
        <field name="name">الأرشيف الإلكتروني</field>
        <field name="type">digital</field>
        <field name="description">المجلد الرئيسي للأرشيف الرقمي</field>
    </record>

    
    
